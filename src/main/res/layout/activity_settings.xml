<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.foo.umbrella.ui.settings.SettingsActivity">

    <include
        android:id="@+id/app_bar_setId"
        layout="@layout/app_bar_setting" />

    <TableRow
        android:id="@+id/settings_tR1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/app_bar_setId"
        android:layout_marginStart="6dp"
        android:layout_marginTop="3dp"
        android:elevation="4dp"
        android:background="@color/cardview_light_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/set_txtId1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/zip_code" />

    </TableRow>

    <TableRow
        android:id="@+id/settings_tR2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_tR1"
        android:layout_marginStart="6dp"
        android:layout_marginTop="3dp"
        android:elevation="4dp"
        android:background="@color/cardview_light_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/set_txtId2"
            android:layout_height="80dp"
            android:text="@string/select_unit" />

    </TableRow>


</RelativeLayout>
